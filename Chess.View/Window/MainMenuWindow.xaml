<Window x:Class="Chess.View.Window.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Background="DarkGray" Icon="/Icon/appIcon.png"
        Title="Main Menu" Height="300" Width="400">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Main Menu" TextAlignment="Center" FontSize="20" Margin="0,0,0,20" />
        <Button Content="Chess" Width="150" Height="40" Click="Chess_Click"/>
        <Button Content="Chess 960" Width="150" Height="40" Margin="0,10,0,0" Click="Chess960_Click"/>
        <Button Content="Quit" Width="150" Height="40" Margin="0,10,0,0" Click="Quit_Click"/>
    </StackPanel>
</Window>
